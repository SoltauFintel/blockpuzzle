<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".PlanetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/onPlanet"
            android:textSize="26sp"
            android:layout_marginStart="14dp"/>

        <TextView
            android:id="@+id/planetInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/play"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/liberatePlanet_BlockPuzzle"
            android:textAllCaps="false"
            android:background="@color/backButton"
            android:layout_marginTop="4dp"/>
        <TextView
            android:id="@+id/gameInfoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/newGame"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/newLiberationAttempt"
            android:textAllCaps="false"
            android:background="@color/backButton"
            android:layout_marginTop="4dp"/>
        <Button
            android:id="@+id/dataexchange"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/dataexchange"
            android:textAllCaps="false"
            android:background="@color/backButton"
            android:layout_marginTop="4dp"/>
        <Button
            android:id="@+id/searchForArtefacts"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/searchForArtefacts"
            android:textAllCaps="false"
            android:background="@color/backButton"
            android:layout_marginTop="4dp"/>
        <Button
            android:id="@+id/buy"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/buy"
            android:textAllCaps="false"
            android:background="@color/backButton"
            android:layout_marginTop="4dp"/>
        <Button
            android:id="@+id/bank"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/bank"
            android:textAllCaps="false"
            android:background="@color/backButton"
            android:layout_marginTop="4dp"/>
        <Button
            android:id="@+id/backToShip"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/backToShip"
            android:textAllCaps="false"
            android:background="@color/backButton"
            android:layout_marginTop="4dp"/>
        <Button
            android:id="@+id/developer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/developer"
            android:textAllCaps="false"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorHeadlineBackground"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:textColor="@color/colorHeadlineForeground"
            android:text="@string/app_name"/>
    </LinearLayout>

</RelativeLayout>